<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:autofillHints="@string/Btn_Hint_Limpar"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_apresentacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16sp"
        android:hint="@string/Txt_Hint_Aplicativo_Lista_Curso"
        android:text="@string/Txt_Hint_Aplicativo_Lista_Curso"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />

    <EditText
        android:id="@+id/editPrimeiroNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:ems="10"
        android:hint="@string/txt_hint_primeiro_nome"
        android:inputType="text"
        android:text="@string/txt_hint_primeiro_nome"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_apresentacao"
        app:layout_constraintVertical_bias="0.029" />

    <EditText
        android:id="@+id/editSobrenome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:ems="10"
        android:hint="@string/Txt_hint_sobrenome"
        android:inputType="text"
        android:text="@string/Txt_hint_sobrenome"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPrimeiroNome"
        app:layout_constraintVertical_bias="0.047" />


    <EditText
        android:id="@+id/editCursoDesejado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:ems="10"
        android:hint="@string/Txt_hint_nome_do_curso"
        android:inputType="text"
        android:text="@string/Txt_hint_nome_do_curso"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editSobrenome"
        app:layout_constraintVertical_bias="0.066" />

    <EditText
        android:id="@+id/editFoneDeContato"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:ems="10"
        android:hint="@string/Txt_hint_fone_contato"
        android:inputType="text"
        android:text="@string/Txt_hint_fone_contato"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editCursoDesejado"
        app:layout_constraintVertical_bias="0.088" />

    <Button
        android:id="@+id/BtnLimpar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/Btn_Hint_Limpar"
        android:text="@string/Btn_Hint_Limpar"
        android:background="@color/Azul_Claro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editFoneDeContato"
        app:layout_constraintVertical_bias="0.396" />

    <Button
        android:id="@+id/BtnSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/Btn_Hint_Salvar"
        android:text="@string/Btn_Hint_Salvar"
        android:background="@color/Azul_Claro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.855"
        app:layout_constraintStart_toEndOf="@+id/BtnLimpar"
        app:layout_constraintTop_toBottomOf="@+id/editFoneDeContato"
        app:layout_constraintVertical_bias="0.397" />

    <Button
        android:id="@+id/BtnFinalizar"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:hint="@string/Btn_Hint_Finalizar"
        android:text="@string/Btn_Hint_Finalizar"
        android:background="@color/Azul_Claro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editFoneDeContato"
        app:layout_constraintVertical_bias="0.808"
        app:layout_margin="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>